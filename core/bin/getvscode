## 'STABLE'
(
  S1="${ZSH_FUNCTIONS_FOLDER}/getvscodeportable.zsh"
  if [ -f "${S1}" ]; then
    . "${S1}"
    getvscodeportable 'STABLE' "${1}"
  else
    echo "Error loading '${S1}'... File or path can not be resolved"
  fi
)

## 'INSIDERS'
(
  S1="${ZSH_FUNCTIONS_FOLDER}/getvscodeportable.zsh"
  if [ -f "${S1}" ]; then
    . "${S1}"
    getvscodeportable 'INSIDERS' "${1}"
  else
    echo "Error loading '${S1}'... File or path can not be resolved"
  fi
)

