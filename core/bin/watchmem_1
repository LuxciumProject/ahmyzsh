# toupper
# set az text to upper case
function watchmem_1_() {
  gnome-terminal --window --profile='meminfowatch_1' --role='meminfowatch miw_1' -t 'meminfowatch' -- meminfowatch $@
}

## Extra code make it easy to copy paste only the function to use elsewhere
watchmem_1_ "${@}"

EXIT_="${?}"

unset -f watchmem_1_

exit $EXIT_
