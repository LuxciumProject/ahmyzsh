#!/usr/bin/env sh

# ddtotheend

{
    function ddsoft() {
        (
            sudo ionice -c 3 nice -n 35 dd if=/dev/zero of=/dev/null &
        )
    }

    function ddhard() {
        (
            sudo ionice -c 1 -n 3 nice -n -35 dd if=/dev/zero of=/dev/null &
        )
    }

    function ddsoft5() {
        (
            sleep 1
            ddsoft
            sleep 0.5
            ddsoft
            sleep 0.5
            ddsoft
            sleep 0.5
            ddsoft
            sleep 0.5
            ddsoft
        )
    }

    function ddhard5() {
        (
            sleep 1
            ddhard
            sleep 0.5
            ddhard
            sleep 0.5
            ddhard
            sleep 0.5
            ddhard
            sleep 0.5
            ddhard

        )
    }
}

