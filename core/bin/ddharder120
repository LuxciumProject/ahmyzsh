# echo -e '\n   TEST #2' ## ------------------------------------------------------

# (
#   echo 'Will test x20 DD HARDnSOFT for 10 sec'
#   sleep 2
#   echo 'Warm Up'
#   (

#     ddhard5 &
#     ddsoft5 &

#     ddhard5 &
