(
    echo 'Will test x60 DDHARD  for 120 sec'
    echo 'Warm Up 5 sec'
    (

        ddhard5 &
        ddhard5 &

        ddhard5 &
        ddhard5 &

        ddhard5 &
        ddhard5 &

        ddhard5 &
        ddhard5 &

        ddhard5 &
        ddhard5 &

        ddhard5 &
        ddhard5 &

    )
    sleep 5
    echo 'full speed for 120 seconds'
    sleep 115
    # \u001b[1000D
    echo -en "\e[38;2;252;198;36m 5 sec remaining \u001b[1000D"
    sleep 1
