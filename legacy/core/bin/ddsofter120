{
  function ddsoft() {
    (
      sudo ionice -c 3 nice -n 35 dd if=/dev/zero of=/dev/null &
    )
  }

  function ddhard() {
    (
      sudo ionice -c 2 -n 3 nice -n -15 dd if=/dev/zero of=/dev/null &
    )
  }

  function ddsoft5() {
    (
      sleep 1
      ddsoft
      sleep 0.5
      ddsoft
      sleep 0.5
      ddsoft
      sleep 0.5
      ddsoft
      sleep 0.5
      ddsoft
    )
  }

  function ddhard5() {
    (
      sleep 1
      ddhard
      sleep 0.5
      ddhard
      sleep 0.5
      ddhard
      sleep 0.5
      ddhard
      sleep 0.5
      ddhard

    )
  }
}

echo -e '\e[38;2;252;198;36m\n   TEST CPU   ' ## ----------------------------------------------------

(
  echo 'Will test x60 DDSOFT  for 120 sec'
  echo 'Warm Up 5 sec'
  (

    ddsoft5 &
    ddsoft5 &

    ddsoft5 &
    ddsoft5 &

    ddsoft5 &
    ddsoft5 &

    ddsoft5 &
    ddsoft5 &

    ddsoft5 &
    ddsoft5 &

    ddsoft5 &
    ddsoft5 &

  )
  sleep 5
  echo 'full speed for 120 seconds'
  sleep 115
  # \u001b[1000D
  echo -en "\e[38;2;252;198;36m 5 sec remaining \u001b[1000D\a"
  sleep 1
  echo -en "\e[38;2;252;198;36m 4 sec remaining \u001b[1000D\a"
  sleep 1
  echo -en "\e[38;2;252;198;36m 3 sec remaining \u001b[1000D\a"
  sleep 1
  echo -en "\e[38;2;252;198;36m 2 sec remaining \u001b[1000D\a"
  sleep 1
  echo -en "\e[38;2;252;198;36m 1 sec remaining \u001b[1000D\a"
  sleep 1
  echo -en "\e[38;2;252;198;36m 0 sec remaining \u001b[1000D\a"
  sudo killall dd
  echo '                                                                       '
)
echo ''
echo -e "--------------------"
echo 'completed !!!'
echo 'completed !!!'
echo 'completed !!!'
echo -e "--------------------\a"
sleep 0.5
echo -en "\a"
sleep 0.25
echo -e "\a"
sleep 0.25
echo -e "\a"
exit 0
