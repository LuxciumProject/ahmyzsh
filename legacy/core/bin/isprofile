#!/usr/bin/env sh

profile_is_bash_or_zsh() {
  local TEST_PROFILE
  TEST_PROFILE="${1-}"
  case "${TEST_PROFILE-}" in
  *"/.bashrc" | *"/.bash_profile" | *"/.zshrc")
    return
    ;;
  *)
    return 1
    ;;
  esac
}

## Extra code make it easy to copy paste only the function out to use elsewhere
profile_is_bash_or_zsh "${@}"

__EXIT_STATUS="${?}"

unset -f profile_is_bash_or_zsh

exit $__EXIT_STATUS
